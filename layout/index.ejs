<% if (is_home()){ %>
<div class="posts">
  <ul>
    <% page.posts.each(function (post, key) { %> <% let bg = post.photos && post.photos[0] || ''%>
    <li class="item">
      <% if (bg) { %>
      <a
        href="<%- url_for(post.path) %>"
        class="photo"
        title="<%= post.title %>"
        style="background-image: url( <%= bg %> )"
      ></a>
      <% }%>
      <div class="describe">
        <div class="title">
          <a href="<%- url_for(post.path) %>"><%= post.title %></a>
        </div>
        <div class="date">
          <%- date(page.date, "YY/MM/DD") %>
        </div>
        <% if (post.excerpt) { %>
        <div class="excerpt post-wrap"><%- post.excerpt %></div>
        <% }%>
        <div class="more">
          <div class="l">
            <div class="heart">
              <svg class="icon" aria-hidden="true">
                <use xlink:href="#icon-jushoucang"></use>
              </svg>
            </div>

            <div class="comment">
              <svg class="icon" aria-hidden="true">
                <use xlink:href="#icon-wodefankui"></use>
              </svg>
            </div>
            <div class="share" data-url="<%- url_for(post.path) %>">
              <svg class="icon" aria-hidden="true">
                <use xlink:href="#icon-zhuanfaxing"></use>
              </svg>
            </div>
          </div>
          <div class="r">
            <a href="<%- url_for(post.path) %>">Read More</a>
          </div>
        </div>
      </div>
    </li>
    <% })%>
  </ul>
</div>
<% }%>
<div class="paginator">
  <%- paginator({ prev_text: '<', next_text: '>', prev_next: false }) %>
</div>
