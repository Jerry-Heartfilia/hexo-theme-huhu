@import 'reset.styl'
@import 'font.styl'
@import 'index.styl'

#universe {
    width: 100%
    height: 100%
    position: fixed
    background: -webkit-linear-gradient(left, #125685, #0A1A3B) /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #125685, #0A1A3B) /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #125685, #0A1A3B) /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #125685, #0A1A3B) /* 标准的语法 */
}

.container {
    width: 100%
    min-height: 1000px
    position: relative

    .hidden {
        display: none
    }

    .show-header {
        transform: translateY(0)
    }

    .hide-header {
        transform: translateY(-100%)
    }

    .hover {
        text-shadow: 0 0 3rem #fff
        transition: text-shadow 0.6s ease

        &:hover {
            text-shadow: 1px 1px 0px #fff
        }
    }

    .diagonal {
        cursor: pointer
        font-family: 'California-Medium'
        -webkit-transform: skewY(-11.5deg)
        transform: skewY(-11.5deg)
        transition: text-shadow 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
    }

    .hover-effect {
        transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)

        &:hover {
            transform: scale(1.02, 1.02)
        }
    }

    header {
        opacity: 0.95
        position: fixed
        width: 100%
        z-index: 999
        padding-top: 2rem
        padding-bottom: 2rem
        display: -webkit-box
        display: -moz-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        justify-content: space-between
        border-bottom-left-radius: 2rem
        transition: -webkit-transform, top, background-color 1s cubic-bezier(0.165, 0.84, 0.44, 1)
        transition: transform, top, background-color 1s cubic-bezier(0.165, 0.84, 0.44, 1)
        transition: transform, top, background-color 1s cubic-bezier(0.165, 0.84, 0.44, 1), -webkit-transform 1s cubic-bezier(0.165, 0.84, 0.44, 1)

        .title {
            width: 80px
            color: #fff
            font-size: 2rem
            padding: 0 3rem
        }

        .menu {
            line-height: 2rem

            ul {
                display: flex

                li {
                    height: 2rem

                    a {
                        color: #fff
                        font-size: 1rem
                        font-family: 'Radikal-Bold'
                        margin: 0 1rem
                        text-shadow: 0 0 3rem #fff
                        position: relative

                        &::after {
                            content: ''
                            height: 1px
                            position: absolute
                            left: 0
                            bottom: -5px
                            width: 0
                            background: #fff
                            transition: width 0.3s ease-in-out
                        }

                        &:hover::after {
                            width: 100%
                        }
                    }
                }
            }
        }
    }

    .banner {
        box-sizing: border-box
        display: -webkit-box
        display: -moz-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        justify-content: space-between
        width: 100%
        height: 40rem
        padding-top: 12rem
        padding-bottom: 5rem

        .caption {
            width: 50%
            display: -webkit-box
            display: -moz-box
            display: -ms-flexbox
            display: -webkit-flex
            display: flex
            align-items: center
            flex-direction: column

            .subhead {
                align-self: flex-start
                color: #00b69d
                font-size: 1.5rem
            }

            .sign {
                width: 23rem
                color: #fff
                font-size: 4rem
                border-bottom: 0.1rem solid #fff
                padding-top: 1.2rem
                padding-bottom: 1.2rem

                p {
                    margin-left: 3rem
                }
            }
        }

        .illustration {
            width: 50%
            height: 100%
            background: url('../svg/dance_the_music.svg') no-repeat center center / 100% 100%
        }
    }

    main {
        .list {
            box-sizing: border-box
            display: -webkit-box
            display: -moz-box
            display: -ms-flexbox
            display: -webkit-flex
            display: flex
            flex-wrap: wrap
            justify-content: space-around
            align-items: center

            .wrap {
                width: 30rem
                height: 20rem
                cursor: pointer
                position: relative
                margin-bottom: 5rem
                box-shadow: 0 7px 20px rgba(0, 0, 0, 0.2)

                .list-date {
                    position: absolute
                    right: 0
                    bottom: 0
                    z-index: 2
                    color: #fff
                    font-size: 5rem
                }

                figure {
                    width: 100%
                    height: 100%
                    border-radius: 5px
                    -webkit-filter: grayscale(50%)
                    filter: grayscale(50%)
                }
            }
        }
    }

    footer {
        width: 100%
        height: 10rem
    }
}