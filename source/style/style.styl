@import 'reset.styl'
@import 'font.styl'
// @import 'index.styl'
@import 'variables.styl'
@import 'highlight.styl'
@import 'media.styl'

#universe {
    width: 100%
    height: 100%
    position: fixed
    background: -webkit-linear-gradient(left, #125685, #0A1A3B) /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #125685, #0A1A3B) /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #125685, #0A1A3B) /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #125685, #0A1A3B) /* 标准的语法 */
}

.header-bg {
    z-index: 999
    position: fixed
    width: 100%
    height: 4.2rem
    background-color: #222222
    transform: translateY(-100%)
    transition: transform 1s cubic-bezier(0.165, 0.84, 0.44, 1)
}

header {
    box-sizing: border-box
    display: -webkit-box
    display: -moz-box
    display: -ms-flexbox
    display: -webkit-flex
    display: flex
    flex-wrap: wrap
    padding: 1rem 3rem
    position: fixed
    width: 100%
    z-index: 999

    .logo {
        color: #fff
        font-size: 1.3rem
        font-family: 'California-Medium'
        padding: 0.3rem
    }

    ul {
        display: -webkit-box
        display: -moz-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        flex-wrap: wrap
        padding: 0 1rem

        a {
            color: #adb7be
            font-size: 0.9rem
        }

        li {
            list-style: none
            padding: 0.5rem 2rem

            &:nth-child(1) {
                border-right: 2px solid #414141
            }
        }
    }
}

.banner {
    width: 100%
    height: 20rem
    position: relative
    background: #232323

    .bg {
        width: 100%
        height: 100%
        background: #232323
        position: absolute
        filter: grayscale(100%) brightness(50%)
        -webkit-filter: grayscale(100%) brightness(50%)
        opacity: 0.1
        background-position: center top
        background-repeat: no-repeat
        background-size: cover
        background-image: url('https://images.ui8.net/uploads/hero_1538305860728.jpg') // images.ui8.net/uploads/hero_1538305860728.jpg)}
    }

    .post-actions {
        position: absolute
        right: 10%
        bottom: -1.5rem
        width: 80%
        height: 3rem
        display: -webkit-box
        display: -moz-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        justify-content: flex-end

        a:nth-child(2) {
            background: #297DCD
        }

        a {
            cursor: pointer
            line-height: 0
            padding: 1.5rem
            margin-left: 1rem
            text-align: center
            color: #fff
            font-weight: 600
            border-radius: 4px
            background: linear-gradient(-180deg, #3db96d 0%, #1b904e 100%)
        }
    }

    .post-content {
        position: absolute
        left: 10%
        bottom: 2rem
        width: 80%

        .title {
            color: #fff
            font-size: 2rem
            font-weight: 300

            .date {
                margin-top: 1rem
                color: #adb7be
                font-size: 1.5rem
                font-weight: 300
            }
        }
    }
}

.container {
    width: 100%
    min-height: 1000px
    position: relative
    display: -webkit-box
    display: -moz-box
    display: -ms-flexbox
    display: -webkit-flex
    display: flex
    flex-wrap: wrap
    padding-top: 5rem
    padding-bottom: 5rem
    box-sizing: border-box

    .card {
        display: -webkit-box
        display: -moz-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        flex-wrap: wrap
        justify-content: space-around

        .card-wrap {
            width: 20rem
            height: 20rem
            margin: 0 1rem

            .card-img {
                width: 20rem
                height: 15rem
                cursor: pointer
                border-radius: 4px
                background-size: cover
                background-position: center center
                background-color: #222222

                .card-shadow {
                    width: 100%
                    height: 100%
                    opacity: 0.7
                    background-color: #333
                    display: none

                    .btn {
                        width: 2.5rem
                        height: 2.5rem
                        border-radius: 3px
                        background-color: #FEFEFE
                        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.25)
                        display: -webkit-box
                        display: -moz-box
                        display: -ms-flexbox
                        display: -webkit-flex
                        display: flex
                        align-items: center
                        justify-content: center

                        // background: url('/svg/eye-fill.svg') 1rem 1rem
                        .svg {
                            width: 1.5rem
                            height: 1.5rem
                        }
                    }

                    .btn+.btn {
                        margin-left: 1rem
                    }
                }
            }

            .card-img:hover > .card-shadow {
                display: -webkit-box
                display: -moz-box
                display: -ms-flexbox
                display: -webkit-flex
                display: flex
                align-items: center
                justify-content: center
            }

            .card-content {
                display: -webkit-box
                display: -moz-box
                display: -ms-flexbox
                display: -webkit-flex
                display: flex
                flex-wrap: wrap
                justify-content: space-between
                align-items: center
                padding-top: 0.7rem
                padding-bottom: 0.7rem

                .card-title {
                    width: 60%
                    overflow: hidden
                    text-overflow: ellipsis
                    white-space: nowrap

                    a {
                        color: #fff
                        font-size: 0.9rem
                    }
                }

                .card-date {
                    border-radius: 5px
                    background: #2a2a2a
                    padding: 0.5rem

                    a {
                        font-weight: 600
                        text-align: center
                        border-radius: 4px
                        font-size: 0.7rem
                        color: #2f8be6
                    }
                }
            }
        }
    }

    .paginator {
        width: 100%
        display: -webkit-box
        display: -moz-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        justify-content: center
        align-items: center
        margin: 4rem 0

        .extend {
            width: 3rem
            height: 3rem
            border-radius: 100%
            background-color: #2A7DCD
        }

        .extend:hover {
            border-radius: 50%
        }

        a {
            margin: 0 1rem
            color: #fff
            font-size: 1.2rem
        }

        .current {
            margin: 0 1rem
            font-weight: 600
            color: #2A7DCD
            font-size: 1.7rem
        }
    }

    .archive-wrap {
        margin: 0 auto
        max-width: 700px

        .tags-title, .archives-title {
            color: #fff
            font-size: 1.5rem
            font-weight: 300
        }

        .tag-cloud {
            margin-top: 1rem

            a {
                font-size: 0.8rem
                border: 1px solid #fff
                padding: 0.1rem 0.5rem 0.1rem 0.5rem
                border-radius: 5rem
                margin-right: 1rem
                margin-bottom: 0.7rem
                display: inline-block
            }

            a:before {
                color: #2BA761
                content: ' # '
                font-weight: 600
            }
        }

        .category-list {
            display: -webkit-box
            display: -moz-box
            display: -ms-flexbox
            display: -webkit-flex
            display: flex
            flex-wrap: wrap
            width: 100%
            color: #fff
            margin-top: 1rem
            margin-bottom: 3rem

            li {
                list-style: none
            }

            .category-list-link {
                color: #fff
                font-size: 0.8rem
                border: 1px solid #fff
                padding: 0.1rem 0.5rem 0.1rem 0.5rem
                border-radius: 5rem
                margin-right: 1rem
                margin-bottom: 0.7rem
                display: inline-block

                &:hover {
                    color: #2BA761
                    border-color: #2BA761
                }
            }

            .category-list-link:before {
                color: #2BA761
                content: ' の '
                font-weight: 600
            }
        }

        .archive-other {
            color: #fff
            font-size: 2rem
            margin-top: 6rem
            font-weight: 300

            .archive-other-before {
                color: #2BA761
                font-weight: 600
            }
        }

        .archive-main {
            padding: 2rem
            background-color: #fff
            border-radius: 4px
            margin-top: 3rem

            .archive-section {
                margin-bottom: 5rem
            }

            .archive-date {
                font-size: 1.5rem
                padding-top: 1rem
                padding-bottom: 2 rem

                a {
                    color: #333
                }
            }

            .archive-content {
                margin-left: 5rem

                .item:first-child {
                    padding-top: 0
                }

                .item:last-child {
                    padding-bottom: 0
                }

                .item {
                    font-size: 0.9rem
                    padding-top: 1rem
                    padding-bottom: 1rem
                    border-left: 1px solid #adb7be

                    .item-point {
                        height: 0.6rem
                        width: 0.6rem
                        display: inline-block
                        border-radius: 100%
                        background: #2A7DCD
                        margin-left: -0.3rem
                    }

                    .item-time {
                        color: #999
                        margin-left: 2rem
                    }

                    .item-title {
                        margin-left: 2rem

                        a {
                            color: #333
                        }
                    }
                }
            }
        }
    }
}

footer {
    padding: 3rem
    background-color: #222222
    border-top: 1px solid #343434

    .products {
        padding: 4rem 0
        display: -webkit-box
        display: -moz-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        flex-wrap: wrap

        .title {
            color: #fff
            font-size: 1.4rem
            font-weight: 500
        }

        ul {
            margin-top: 1rem
            display: -webkit-box
            display: -moz-box
            display: -ms-flexbox
            display: -webkit-flex
            display: flex
            flex-wrap: wrap

            li {
                list-style: none
            }
        }

        .l {
            width: 60%

            ul {
                margin-top: 1.5rem

                li {
                    padding-bottom: 1rem
                    list-style: none

                    a {
                        color: #4e4e4e
                        font-size: 0.8rem
                    }

                    a:hover {
                        color: #333
                    }
                }
            }
        }

        .r {
            flex: 1

            .svg {
                width: 2rem
                height: 2rem
            }

            li {
                margin-right: 1rem
                margin-bottom: 1rem
            }
        }
    }

    .statist {
        padding: 2rem 0
        border-top: 2px solid #2d2d2d

        ul {
            display: -webkit-box
            display: -moz-box
            display: -ms-flexbox
            display: -webkit-flex
            display: flex
            flex-wrap: wrap

            li {
                padding: 0 1rem
                list-style: none

                div:nth-child(1) {
                    color: #fff
                    font-size: 1.2rem
                }

                div:nth-child(2) {
                    color: #4E4E4E
                    font-size: 0.9rem
                    padding-top: 0.7rem
                }

                &:nth-child(1) {
                    padding-left: 0
                }
            }
        }
    }

    .copyright {
        display: -webkit-box
        display: -moz-box
        display: -ms-flexbox
        display: -webkit-flex
        display: flex
        font-size: 0.7rem
        color: #4E4E4E
        padding-top: 1.5rem
        border-top: 2px solid #2d2d2d
    }
}
