@import 'variables.styl'
@import 'reset.styl'
@import 'font.styl'
// @import 'index.styl'
@import 'highlight.styl'
@import 'media.styl'

.head {
    top: 0
    position: fixed
    width: 90%
    max-width: 1200px
    height: 3.8rem
    z-index: 999
    border-bottom-left-radius: 1rem
    border-bottom-right-radius: 1rem
    background-color: rgb(250, 246, 243)
    displayFlex()
    justify-content: flex-start
    align-items: center
    box-shadow: 0 0px 5px 5px rgb(233, 233, 233)

    a {
        color: #333
        padding: 1.3rem
        font-size: 0.9rem
        font-family: 'En-demo'
    }

    a:hover {
        color: #3273dc
    }
}

#container {
    width: 980px
    height: 100%
    overflow: hidden
    box-shadow: 0 0px 20px 20px rgb(233, 233, 233)
    background-color: rgb(255, 255, 255)
    displayFlex()

    #main {
        flex: 1
        overflow: auto
        padding: 3.8rem 2rem 2rem 2rem

        .navbar {
            width: 100%
            height: 8rem
            displayFlex()
            flex-wrap: wrap

            .toggle {
                width: 30%
                displayFlex()
                justify-content: flex-start
                align-items: center

                .icon-align-right {
                    cursor: pointer
                    color: rgb(12, 8, 7)
                    font-size: 2rem
                }
            }

            .search {
                flex: 1
                displayFlex()
                justify-content: center
                align-items: center

                .input-warp {
                    width: 100%
                    height: 1rem
                    border-radius: 1rem
                    padding: 1rem
                    background-color: rgb(248, 248, 248)
                    displayFlex()
                    justify-content: center
                    align-items: center

                    .icon-search {
                        font-weight: 600
                        font-size: 1.4rem
                        color: rgb(38, 38, 38)
                    }

                    input {
                        padding-left: 1rem
                        width: 100%
                        border: 0
                        color: rgb(198, 198, 198)
                        background-color: rgb(248, 248, 248)
                        font-size: 1.1rem
                        font-family: 'En-demo2'
                        caret-color: #333
                        outline: none
                    }
                }

                ::-webkit-input-placeholder { /* WebKit browsers */
                    color: rgb(198, 198, 198)
                    font-size: 1.1rem
                }

                ::-moz-placeholder { /* Mozilla Firefox 19+ */
                    color: rgb(198, 198, 198)
                    font-size: 1.1rem
                }

                :-ms-input-placeholder { /* Internet Explorer 10+ */
                    color: rgb(198, 198, 198)
                    font-size: 1.1rem
                }
            }
        }

        .content {
            .posts {
                ul {
                    list-style: none
                }

                .item {
                    width: 100%
                    min-height: 10rem
                    border-radius: 0.5rem
                    margin-bottom: 2rem
                    displayFlex()
                    flex-direction: column
                    border: 1px solid rgba(0, 0, 0, 0.05)

                    .photo {
                        width: 100%
                        height: 17rem
                        display: inline-block
                        background-size: cover
                        background-position: center center
                        background-color: rgb(201, 198, 193)
                    }

                    .describe {
                        flex: 1
                        padding: 1rem
                        font-size: 0.8rem

                        .title {
                            a {
                                color: #333
                                font-size: 1.5rem
                            }

                            a:hover {
                                color: #3273dc
                            }
                        }

                        .date {
                            color: #7a7a7a
                            font-size: 0.8rem
                            margin-top: 0.3rem
                            margin-bottom: 1rem
                        }

                        .excerpt {
                            margin: 0.5rem 0
                        }
                    }

                    .more {
                        displayFlex()
                        margin-top: 1rem
                        flex-wrap: wrap
                        justify-content: space-between

                        .l {
                            displayFlex()

                            i {
                                cursor: pointer
                                color: #7a7a7a
                                font-size: 1.35rem
                                margin-right: 0.5rem
                                transition: all 0.2rem
                                displayFlex()
                                justify-content: center
                                align-items: center
                                transition: all 0.3s
                            }

                            i:hover {
                                color: #333
                                transform: scale(1.1, 1.1)
                            }
                        }

                        .r {
                            a {
                                color: #333
                                display: inline-block
                                padding: 0.7rem
                                text-align: center
                                border-radius: 0.7rem
                                font-weight: 600
                                font-family: 'En-demo'
                                transition: all 0.3s
                                background-color: rgb(254, 211, 54)
                            }

                            a:hover {
                                color: #fff
                                transform: scale(1.1, 1.1)
                            }
                        }
                    }
                }
            }

            .archives {
                font-family: 'En-demo'

                a {
                    font-family: 'En-demo'
                }

                .header {
                    width: 80%
                    height: 4rem
                    margin-top: 1rem
                    margin-left: auto
                    margin-right: auto
                    margin-bottom: 3rem
                    border-radius: 1rem
                    box-sizing: border-box
                    padding-left: 2rem
                    padding-right: 2rem
                    displayFlex()
                    align-items: center
                    justify-content: space-between
                    background-color: rgb(116, 127, 255)

                    .icon {
                        i {
                            color: #fff
                            font-size: 1.7rem
                        }
                    }

                    .explain {
                        color: #fff
                        font-size: 1rem
                    }
                }

                .wrap {
                    margin-bottom: 1rem
                }

                .meta {
                    a {
                        color: #fff
                        padding: 0.7rem
                        border-radius: 1rem
                        background-color: rgb(245, 149, 142)
                    }
                }

                .year {
                    margin-top: 1rem
                    margin-left: 1.7rem

                    .item {
                        padding: 1rem
                        border-left: 1px solid #dbdbdb
                        displayFlex()

                        .photo {
                            width: 3.5rem
                            height: 3.5rem
                            border-radius: 1rem
                            margin-right: 1rem
                            overflow: hidden

                            img {
                                width: 100%
                                height: 100%
                            }
                        }

                        .date {
                            color: #7a7a7a
                            font-size: 0.8rem
                            margin: 0.2rem 0
                        }

                        .title {
                            a {
                                color: #242424
                                font-size: 1.1rem
                            }

                            a:hover {
                                color: #3273dc
                            }
                        }

                        .type {
                            i {
                                font-size: 0.9rem
                            }
                        }
                    }

                    .item:before {
                        content: ''
                        width: 0.7rem
                        height: 0.7rem
                        border-radius: 50%
                        background-color: #dbdbdb
                        margin-left: -1.4rem
                        margin-right: 2rem
                    }
                }
            }

            .paginator {
                displayFlex()
                align-items: center
                justify-content: center

                .current {
                    background-color: #3273dc !important
                    border-color: #3273dc !important
                    color: #fff !important
                }

                .page-number {
                    width: 2rem
                    height: 2rem
                    margin: 0.3rem
                    font-size: 0.9rem
                    border-radius: 5px
                    color: rgb(12, 8, 7)
                    font-family: 'En-demo'
                    background-color: rgb(247, 247, 247)
                    border-color: #3273dc
                    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15)
                    displayFlex()
                    justify-content: center
                    align-items: center
                }
            }
        }
    }

    #card {
        width: 33%
        padding: 6rem 3rem 3rem 3rem
        overflow: auto
        box-sizing: border-box
        background-color: rgb(250, 246, 243)

        .locate-widget {
            font-size: 2rem
            margin-bottom: 2rem
        }

        .follow-widget {
            displayFlex()
            flex-wrap: wrap
            justify-content: space-between
            padding-bottom: 1rem
            border-bottom: 1px solid rgb(201, 198, 193)

            a {
                width: 25%
            }

            i {
                cursor: pointer
                color: rgb(120, 120, 120)
                font-size: 1.7rem
                transition: color 0.2s
            }

            i:hover {
                color: rgb(30, 30, 30)
            }
        }

        .logo-widget {
            displayFlex()
            align-items: center
            justify-content: space-between
            font-family: 'En-demo'
            font-size: 1.5rem
            font-weight: 600
            margin-bottom: 2rem

            .author {
                font-size: 1.8rem
            }

            .logo {
                width: 3rem
                height: 3rem
                margin-left: 1rem
                border-radius: 1rem
                background-size: cover
                background-position: center center
                background-color: rgb(201, 198, 193)
            }
        }

        .category-widget, .tag-widget, .toc-widget {
            displayFlex()
            flex-direction: column
            margin: 1.5rem 0
            font-family: 'En-demo'

            .title {
                font-size: 1.1rem
                font-weight: 500
                displayFlex()
                justify-content: space-between
                align-items: center

                a {
                    padding: 0 0.5rem
                    font-size: 1.5rem
                    font-weight: 600
                }
            }

            .tag-cloud, .list {
                margin-top: 0.5rem
                margin-left: 1rem
            }

            ul {
                list-style: none
            }

            a {
                color: #4a4a4a
                font-size: 0.85rem
                padding: 0.2rem
                border-radius: 3px
                display: inline-block
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
            }

            a:hover {
                color: rgb(255, 255, 255) !important
                background-color: rgb(180, 180, 180) !important
            }
        }

        .toc-widget {
            .post-toc {
                flex: 1

                .toc {
                    margin-top: 0.5rem
                    margin-left: 1rem
                }

                a {
                    width: 100%
                    height: 100%
                }

                ol, ul {
                    line-height: 1.2rem
                    list-style: none
                    margin-left: 1rem
                }
            }
        }

        .category-widget {
            .list {
                a {
                    width: 100%
                    height: 100%
                }
            }
        }
    }
}