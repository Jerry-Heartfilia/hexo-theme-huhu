@import 'variables.styl'
@import 'reset.styl'
@import 'font.styl'
@import 'highlight.styl'
@import 'media.styl'
@import 'dialog.styl'

.head {
    top: 0
    position: fixed
    width: 95%
    max-width: 1200px
    height: 3.8rem
    z-index: 999
    border-bottom-left-radius: 1rem
    border-bottom-right-radius: 1rem
    background-color: rgb(250, 246, 243)
    display-flex()
    align-items()
    justify-content(flex-start)
    border: 1px solid rgb(222, 222, 222)

    a {
        color: #7a7a7a
        padding: 1rem
        font-size: 0.8rem
        font-weight: 600
        font-family: 'En-demo'

        &.current {
            color: #3273dc
        }
    }

    a:hover {
        color: #3273dc
    }
}

#container {
    width: 980px
    height: 100%
    overflow: hidden
    box-shadow: 0 0px 5px 5px rgb(233, 233, 233)
    background-color: rgb(255, 255, 255)
    display-flex()

    #main {
        flex: 1
        flex-direction(column)
        overflow: auto
        padding: 3rem 1rem 2rem

        .navbar {
            width: 100%
            height: 8rem
            display-flex()
            flex-wrap(wrap)

            .toggle {
                width: 30%
                display-flex()
                align-items()
                justify-content(flex-start)

                .toggle-icon {
                    cursor: pointer
                    color: rgb(12, 8, 7)
                }
            }

            .search {
                flex: 1
                display-flex()
                justify-content()
                align-items()

                .input-warp {
                    width: 100%
                    height: 1rem
                    border-radius: 1rem
                    padding: 1rem
                    background-color: rgb(248, 248, 248)
                    display-flex()
                    justify-content: center
                    align-items: center

                    .icon {
                        color: rgb(38, 38, 38)
                    }

                    input {
                        padding-left: 1rem
                        width: 100%
                        border: 0
                        color: rgb(198, 198, 198)
                        background-color: rgb(248, 248, 248)
                        font-size: 1.1rem
                        font-family: 'En-demo2'
                        caret-color: #333
                        outline: none
                    }
                }

                ::-webkit-input-placeholder { /* WebKit browsers */
                    color: rgb(198, 198, 198)
                    font-size: 1.1rem
                }

                ::-moz-placeholder { /* Mozilla Firefox 19+ */
                    color: rgb(198, 198, 198)
                    font-size: 1.1rem
                }

                :-ms-input-placeholder { /* Internet Explorer 10+ */
                    color: rgb(198, 198, 198)
                    font-size: 1.1rem
                }
            }
        }

        .content {
            .posts {
                ul {
                    list-style: none
                }

                .item {
                    display-flex()
                    flex-direction(column)
                    width: 100%
                    min-height: 10rem
                    border-radius: 0.5rem
                    margin-bottom: 2rem
                    border: 1px solid rgba(0, 0, 0, 0.05)

                    .photo {
                        width: 100%
                        height: 17rem
                        display: inline-block
                        background-size: cover
                        background-position: center center
                        background-color: rgb(201, 198, 193)
                    }

                    .describe {
                        flex: 1
                        flex-direction(column)
                        padding: 1rem
                        font-size: 0.8rem

                        .title {
                            a {
                                color: #333
                                font-size: 1.5rem
                            }

                            a:hover {
                                color: #3273dc
                            }
                        }

                        .date {
                            color: #7a7a7a
                            font-size: 0.8rem
                            margin-top: 0.6rem
                            margin-bottom: 1rem

                            .icon {
                                width: 1.4rem
                                height: 1.4rem
                            }
                        }

                        .excerpt {
                            margin: 0.5rem 0
                        }
                    }

                    .more {
                        display-flex()
                        flex-wrap(wrap)
                        justify-content(space-between)
                        margin-top: 1rem

                        .l {
                            display-flex()

                            .icon {
                                center()
                                cursor: pointer
                                color: #7a7a7a
                                width: 1.4rem
                                height: 1.4rem
                                margin-right: 0.5rem
                                transition: all 0.2rem
                                transition: all 0.3s

                                &:hover {
                                    color: #333
                                    transform: scale(1.1, 1.1)
                                }
                            }
                        }

                        .r {
                            a {
                                color: #333
                                display: inline-block
                                padding: 0.7rem
                                text-align: center
                                border-radius: 0.7rem
                                font-weight: 600
                                font-family: 'En-demo'
                                transition: all 0.3s
                                background-color: rgb(254, 211, 54)
                            }

                            a:hover {
                                color: #fff
                                transform: scale(1.1, 1.1)
                            }
                        }
                    }
                }
            }

            .archives {
                .header {
                    display-flex()
                    align-items()
                    justify-content(space-between)
                    width: 80%
                    height: 4rem
                    margin: 1rem auto 3rem
                    border-radius: 1rem
                    box-sizing: border-box
                    padding-left: 2rem
                    padding-right: 2rem
                    background-color: rgb(116, 127, 255)

                    .icon {
                        color: #fff
                        width: 1.5rem
                        height: 1.5rem
                    }

                    .explain {
                        color: #fff
                        font-size: 1rem
                    }
                }

                .wrap {
                    margin-bottom: 1rem
                }

                .meta {
                    a {
                        color: #fff
                        padding: 0.7rem
                        border-radius: 1rem
                        background-color: rgb(245, 149, 142)
                    }
                }

                .year {
                    margin-top: 1rem
                    margin-left: 1.7rem

                    .item {
                        padding: 1rem
                        border-left: 1px solid #dbdbdb
                        display-flex()

                        .photo {
                            width: 3.5rem
                            height: 3.5rem
                            border-radius: 1rem
                            margin-right: 1rem
                            overflow: hidden

                            img {
                                width: 100%
                                height: 100%
                            }
                        }

                        .date {
                            color: #7a7a7a
                            font-size: 0.8rem
                            margin: 0.2rem 0

                            .icon {
                                width: 1rem
                                height: 1rem
                                vertical-align: -0.15rem
                            }
                        }

                        .title {
                            a {
                                color: #242424
                                font-size: 1rem
                                font-weight: 600
                            }

                            a:hover {
                                color: #3273dc
                            }
                        }
                    }

                    .item:before {
                        content: ''
                        width: 0.7rem
                        height: 0.7rem
                        border-radius: 50%
                        background-color: #dbdbdb
                        margin-left: -1.4rem
                        margin-right: 2rem
                    }
                }
            }

            .paginator {
                center()

                .current {
                    background-color: #3273dc !important
                    border-color: #3273dc !important
                    color: #fff !important
                }

                .page-number {
                    center()
                    width: 2rem
                    height: 2rem
                    margin: 0.3rem
                    font-size: 0.9rem
                    border-radius: 5px
                    color: rgb(12, 8, 7)
                    font-family: 'En-demo'
                    background-color: rgb(247, 247, 247)
                    border-color: #3273dc
                    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15)
                }
            }
        }

        footer {
            center()
            flex-direction(column)
            height: 6rem

            .copyright, .icp {
                color: #7a7a7a
                font-size: 0.7rem
            }

            a {
                color: RGB(50, 115, 220)
            }

            a:hover {
                color: RGB(30, 105, 210)
            }
        }
    }

    #card {
        width: 33%
        padding: 6rem 3rem 3rem 3rem
        overflow: auto
        box-sizing: border-box
        background-color: rgb(250, 246, 243)

        .locate-widget {
            display-flex()
            align-items(center)
            justify-content(space-between)
            font-size: 1.5rem
            margin-bottom: 2rem
            height: 5rem

            // line-height: 5rem
            .city-wrap {
                width: 50%
                ellipsis()
            }

            .location {
                color: #6a737d
                width: 1.5rem
                height: 1.5rem
            }

            .weather-wrap {
                flex: 1
                overflow: hidden
                text-align: center

                .weather {
                    width: 5rem
                    height: 5rem
                }

                #weather-detail {
                    width: 100%
                    ellipsis()
                    color: #6a737d
                    font-size: 0.5rem
                }
            }
        }

        .follow-widget {
            display-flex()
            flex-wrap(wrap)
            justify-content(space-between)
            padding-bottom: 1rem
            border-bottom: 1px solid rgb(201, 198, 193)

            a {
                width: 25%
                margin: 0.3rem 0
                text-align: center

                &:hover > .icon {
                    color: #333
                }
            }
        }

        .logo-widget {
            display-flex()
            flex-wrap(wrap)
            justify-content(space-between)
            font-family: 'En-demo'
            font-size: 1.5rem
            font-weight: 600
            margin-bottom: 2rem

            .author {
                font-size: 1.8rem
            }

            .logo {
                width: 3rem
                height: 3rem
                margin-left: 1rem
                border-radius: 1rem
                background-size: cover
                background-position: center center
                background-color: rgb(201, 198, 193)
            }
        }

        .category-widget, .tag-widget, .toc-widget {
            display-flex()
            flex-direction(column)
            margin: 1.5rem 0
            font-family: 'En-demo'

            .title {
                font-size: 1.1rem
                font-weight: 600
                display-flex()
                align-items(center)
                justify-content(space-between)

                a {
                    padding: 0 0.5rem
                    font-size: 1.5rem
                }
            }

            .tag-cloud, .list {
                margin-top: 0.5rem
                margin-left: 1rem
            }

            ul {
                list-style: none
            }

            a {
                color: #4a4a4a
                font-size: 0.85rem
                font-weight: 600
                padding: 0.2rem
                border-radius: 3px
                display: inline-block
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap
            }

            a:hover {
                color: rgb(255, 255, 255) !important
                background-color: rgb(180, 180, 180) !important
            }
        }

        .toc-widget {
            .post-toc {
                flex: 1

                .toc {
                    margin-top: 0.5rem
                    margin-left: 1rem
                }

                a {
                    width: 100%
                    height: 100%
                }

                ol, ul {
                    line-height: 1.2rem
                    list-style: none
                    margin-left: 1rem
                }
            }
        }

        .category-widget {
            .list {
                a {
                    width: 100%
                    height: 100%
                }
            }
        }
    }
}